@model List<SinemaBiletSatis.Entities.Film>
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center">
    <h1 class="display-4">Sinema Bilet Satış</h1>
</div>
@if (Model != null)
{
    <div class="container">
        <main role="main" class=" py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    @foreach (var item in Model)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img src="~/Img/@item.Image" class="card-img-top" alt="...">
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="card-title">@item.FilmAdi</h5>
                                        <!-- Product price-->
                                        <p class="card-text">@item.Yonetmen</p>
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="BuyTicket" asp-controller="Home"   asp-route-movieId="@item.Id" >Bilet Al</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </main>
    </div>

}
else
{
    <p>No films available</p>
}

